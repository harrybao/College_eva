<!--pages/login/login.wxml-->
<view class='loginImg'>
  <image src='../../images/icons/logo.png' style='width:400rpx;height:180rpx;margin-top:100rpx;margin-left:175rpx;'/>
</view>
<form>
  <view class='logintext'>
  <view class='login-lo'>
    <image src='../../images/icons/phone.png' class='login-logo'></image>
    <input class='login-value' type='text' placeholder='手机号:'></input>
  </view> 
  <view class='login-lo'>
    <image src='../../images/icons/passwd.png' class='login-logo'></image>
    <input class='login-value' type='text' placeholder='密码:'></input>
    <image src='../../images/icons/viewpwd.png' class='login-logo'></image>
  </view>
  <view class='logintext-url'>
    <navigator class='login-url-nav'>
      <text class='logintext-url-text'>忘记密码?</text>
    </navigator>
  </view>
</view>
<view class='loginBtn'>
  <button class='loginBtn-login' bindtap="login">登录</button>
  <button class='loginBtn-regist'>微信授权</button>
</view>
</form>
